---
import Card, { Props as CardProps } from "./Card.astro";
import Icon from "~/components/Icon.astro";

interface Props {
  icon?: string;
  title?: string;
  articles: Array<CardProps>;
}

const { icon, title, articles } = Astro.props;
---

<div class="wrapper">
  {
    title && (
      <header>
        <h1 class="text-2xl ">
          {icon && <Icon name={icon} inline />}
          <span class="align-middle">{title}</span>
        </h1>
      </header>
    )
  }
  <div class="grid">
    {articles.map((article) => <Card {...article} />)}
  </div>
</div>

<style>
  div.wrapper {
    margin: var(--spacing-8) auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  div.grid {
    display: grid;
    gap: 32px;
    grid-template-columns: 1fr;
    @media (min-width: 34.375rem) {
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    }
  }
</style>
