---
import Card, { Props as CardProps } from "./Card.astro";
import Icon from "~/components/Icon.astro";

interface Props {
  icon?: string;
  title?: string;
  articles: Array<CardProps>;
}

const { icon, title, articles } = Astro.props;
---

<div class="mx-auto my-8 flex flex-col gap-8">
  {
    title && (
      <header>
        <h1 class="text-2xl">
          {icon && <Icon name={icon} inline />}{" "}
          <span class="align-middle">{title}</span>
        </h1>
      </header>
    )
  }
  <div
    class="grid grid-cols-1 gap-8 [@media(min-width:34.375rem)]:grid-cols-[repeat(auto-fill,minmax(400px,1fr))]"
  >
    {articles.map((article) => <Card {...article} />)}
  </div>
</div>
