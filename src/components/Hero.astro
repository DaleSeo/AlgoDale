---
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "~/consts";
import hero from '~/images/hero.jpg'
---

<header
  class="grid place-items-center h-[40vh] max-h-[400px] overflow-hidden my-8"
>
  <div class="z-1 text-center p-1">
    <h1 class="text-5xl leading-loose text-white">{SITE_TITLE}</h1>
    <p class="text-2xl leading-loose text-white">
      {SITE_DESCRIPTION} 
    </p>
  </div>
  <Image src={hero} alt="hero" class="object-cover w-full z-[-1]" />
</header>

<style>
  header {
    grid-template-areas: "hero";
    background-color: rgba(0 0 0/ 0.3);
    > * {
      grid-area: hero;
    }
  }

  img {
    height: min(40vh, 400px);
  }
</style>
