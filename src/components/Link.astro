---
interface Props {
  to: string;
  inline?: boolean;
  external?: boolean;
}

const { to, external = false, inline = false } = Astro.props;
---

<a
  href={to}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class:list={[
    "text-primary items-center gap-1",
    inline ? "inline-flex" : "flex",
  ]}><slot /></a
>
