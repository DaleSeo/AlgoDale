---
import { Icon as AstroIcon } from "astro-icon";

const icons = {
  array: "ic:outline-data-array",
  book: "tabler:book",
  brain: "mdi:brain-freeze",
  clock: "fe:clock",
  direction: "mdi:compass-outline",
  discord: "simple-icons:discord",
  formula: "fluent:math-formula-24-filled",
  github: "simple-icons:github",
  graph: "grommet-icons:tree",
  iteration: "mdi:repeat",
  java: "mdi:language-java",
  javascript: "simple-icons:javascript",
  leetcode: "simple-icons:leetcode",
  loop: "mdi:loop",
  magic: "mdi:magic",
  matrix: "mdi:matrix",
  medium: "simple-icons:medium",
  paperClip: "uiw:paper-clip",
  parentheses: "mdi:code-parentheses",
  pointer: "la:hand-pointer",
  python: "simple-icons:python",
  queue: "mdi:human-queue",
  range: "codicon:arrow-both",
  recursion: "ion:infinite",
  search: "mdi:search",
  set: "mdi:set",
  sort: "mdi:sort",
  stack: "octicon:stack-24",
  string: "carbon:string-text",
  table: "ph:table",
  tag: "mdi:tag",
  tree: "icomoon-free:tree",
  twitter: "simple-icons:twitter",
  youtube: "simple-icons:youtube",
};

export interface Props {
  name: keyof typeof icons;
  size?: string;
  inline?: boolean;
  class?: string;
}

const { name, size = "1em", inline, class: className } = Astro.props;
const iconName = name in icons ? icons[name] : "mdi:account";
---

<AstroIcon
  name={iconName}
  width={size}
  height={size}
  class:list={[className, { inline }]}
/>
