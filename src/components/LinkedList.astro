---
const nums = [5, 7, 3];
---

<figure
  class="flex items-center justify-center overflow-x-auto whitespace-nowrap py-8"
>
  <div
    class="rounded-full bg-(--color-background) px-4 py-4 text-(--color-text) text-2xl"
  >
    head
  </div>
  <div
    class="-mr-6 -translate-x-6 px-2 py-1 text-(--color-text) text-3xl"
  >
    --&gt;
  </div>
  {
    nums.map((num) => (
      <>
        <div
          class="flex items-stretch rounded-lg border-2 border-(--color-text) text-(--color-primary) text-3xl"
        >
          <div class="px-2 py-1">{num}</div>
          <div class="border-l-2 border-l-(--color-text) px-2 py-1">
            &nbsp;&nbsp;
          </div>
        </div>
        <div
          class="-mr-6 -translate-x-6 px-2 py-1 text-(--color-text) text-3xl"
        >
          --&gt;
        </div>
      </>
    ))
  }
  <div
    class="rounded-full bg-(--color-background) px-4 py-4 text-(--color-text) text-2xl"
  >
    null
  </div>
</figure>
