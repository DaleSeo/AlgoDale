---
import { CollectionEntry, getCollection } from "astro:content";
import ArticleLayout from "~/layouts/ArticleLayout.astro";

export async function getStaticPaths() {
  const problems = await getCollection(
    "problems",
    (problem) => !problem.data.draft
  );
  return problems.map((problem) => ({
    params: { slug: problem.slug },
    props: problem,
  }));
}
type Props = CollectionEntry<"problems">;

const problem = Astro.props;
const {
  data: { title, date, tags },
} = problem;
const { Content } = await problem.render();
---

<ArticleLayout {title} {date} {tags}>
  <Content />
</ArticleLayout>
