---
import { CollectionEntry, getCollection } from "astro:content";
import Problem from "../../layouts/Problem.astro";

export async function getStaticPaths() {
  const problems = await getCollection("problems");
  return problems
    .filter((problem) => !problem.data.draft)
    .map((problem) => ({
      params: { slug: problem.slug },
      props: problem,
    }));
}
type Props = CollectionEntry<"problems">;

const problem = Astro.props;
const { Content } = await problem.render();
---

<Problem {...problem.data}>
  <Content />
</Problem>
