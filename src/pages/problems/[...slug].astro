---
import { CollectionEntry, getCollection } from "astro:content";
import Article from "../../components/Article.astro";
import MaxWidthWrapper from "../../components/MaxWidthWrapper.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const problems = await getCollection("problems");
  return problems
    .filter((problem) => !problem.data.draft)
    .map((problem) => ({
      params: { slug: problem.slug },
      props: problem,
    }));
}
type Props = CollectionEntry<"problems">;

const problem = Astro.props;
const {
  data: { title, date, tags },
} = problem;
const { Content } = await problem.render();
---

<BaseLayout>
  <MaxWidthWrapper>
    <Article title={title} date={date} tags={tags}>
      <Content />
    </Article>
  </MaxWidthWrapper>
</BaseLayout>
