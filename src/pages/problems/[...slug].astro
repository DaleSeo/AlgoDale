---
import { CollectionEntry, getCollection } from "astro:content";
import Article from "../../components/Article.astro";
import MaxWidthWrapper from "../../components/MaxWidthWrapper.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const problems = await getCollection(
    "problems",
    (problem) => !problem.data.draft
  );
  return problems.map((problem) => ({
    params: { slug: problem.slug },
    props: problem,
  }));
}
type Props = CollectionEntry<"problems">;

const problem = Astro.props;
const {
  data: { title, date, tags },
} = problem;
const { Content } = await problem.render();
---

<BaseLayout title={title}>
  <MaxWidthWrapper>
    <Article title={title} date={date} tags={tags}>
      <Content />
    </Article>
  </MaxWidthWrapper>
</BaseLayout>
