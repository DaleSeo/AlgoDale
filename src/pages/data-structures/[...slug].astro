---
import { CollectionEntry, getCollection } from "astro:content";
import Article from "../../components/Article.astro";
import MaxWidthWrapper from "../../components/MaxWidthWrapper.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const dataStructures = await getCollection(
    "data-structures",
    (dataStructure) => !dataStructure.data.draft
  );
  return dataStructures.map((guide) => ({
    params: { slug: guide.slug },
    props: guide,
  }));
}
type Props = CollectionEntry<"data-structures">;

const dataStructure = Astro.props;
const {
  data: { title, date, tags },
} = dataStructure;
const { Content } = await dataStructure.render();
---

<BaseLayout title={title}>
  <MaxWidthWrapper>
    <Article title={title} date={date} tags={tags}>
      <Content />
    </Article>
  </MaxWidthWrapper>
</BaseLayout>
