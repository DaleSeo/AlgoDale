---
import { CollectionEntry, getCollection } from "astro:content";
import ArticleLayout from "~/layouts/ArticleLayout.astro";

export async function getStaticPaths() {
  const dataStructures = await getCollection(
    "data-structures",
    (dataStructure) => !dataStructure.data.draft
  );
  return dataStructures.map((guide) => ({
    params: { slug: guide.slug },
    props: guide,
  }));
}
type Props = CollectionEntry<"data-structures">;

const dataStructure = Astro.props;
const {
  data: { title, date, tags },
} = dataStructure;
const { Content } = await dataStructure.render();
---

<ArticleLayout {title} {date} {tags}>
  <Content />
</ArticleLayout>
