---
import Article from "~/components/Article.astro";
import MaxWidthWrapper from "~/components/MaxWidthWrapper.astro";
import BaseLayout from "~/layouts/BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
  date: Date;
  tags?: string[];
}

const { title, description, date, tags } = Astro.props;
---

<BaseLayout {title} {description}>
  <MaxWidthWrapper>
    <Article {title} {date} {tags}>
      <slot />
    </Article>
  </MaxWidthWrapper>
</BaseLayout>
